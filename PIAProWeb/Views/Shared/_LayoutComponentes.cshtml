<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PIAProWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PIAProWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="~/Fotos/Logo/computer_central-removebg-preview.png" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" height="100"></img>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" class="carro">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Componentes" class="carro">Componentes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="Index" class="carro">Admin</a>
                        </li>

                        <li class="nav-item" id="navcarrito">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carrito" asp-action="Index" class="carro">Carrito</a>

                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <aside class="lateral">
        <header>Indice</header>
        <ul class="menuVert">
            <li><a asp-controller="Home" asp-action="Componentes" asp-route-IdCategoria="2">Procesadores</a></li>
            <li><a asp-controller="Home" asp-action="Componentes" asp-route-IdCategoria="3">Disco Duro</a></li>
            <li><a asp-controller="Home" asp-action="Componentes" asp-route-IdCategoria="4">Fuente de Alimentacion</a></li>
            <li><a asp-controller="Home" asp-action="Componentes" asp-route-IdCategoria="5">Tarjeta Grafica'</a></li>
            <li><a asp-controller="Home" asp-action="Componentes" asp-route-IdCategoria="6">Placa Madre</a></li>
            <li><a asp-controller="Home" asp-action="Componentes" asp-route-IdCategoria="7">Memoria RAM</a></li>
        </ul>
    </aside>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PIAProWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/e3579fd25f.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
