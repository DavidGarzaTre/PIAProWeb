@model IEnumerable<PIAProWeb.Models.dbModels.CategoriaProducto>

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Index";
}

<h1>Administración de Categorías</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Categoría</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.IdCategoria">Edit</a>
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IdCategoria">Details</a>
            </td>
            <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdCategoria">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
