@model PIAProWeb.Models.dbModels.Producto

<nav>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Delete";
}
</nav>

<h1>Borrar Producto</h1>

<h3>Estas seguro de eliminar este producto?</h3>
<section>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioProducto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagenProducto)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Fotos/Productos/@Html.DisplayFor(modelItem => modelItem.ImagenProducto)" width="300" height="150" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StockProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StockProducto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCategoriaNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCategoriaNavigation.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProducto" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Regresar al Indice</a>
    </form>
</section>
