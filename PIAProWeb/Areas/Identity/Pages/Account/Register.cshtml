@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<section class="sectionlogin">
    <h4>Bienvenido a Computer Central</h4>
    <img src="~/Fotos/Logo/computer_central-removebg-preview.png" width="400" />
</section>
<div class="row">
    <div class="col-md-8">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Input.Nombre" class="form-control" aria-required="true" />
                <label asp-for="Input.Nombre"></label>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Apellido" class="form-control" aria-required="true" />
                <label asp-for="Input.Apellido"></label>
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Calle_Numero" class="form-control" aria-required="true" />
                <label asp-for="Input.Calle_Numero"></label>
                <span asp-validation-for="Input.Calle_Numero" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Estado" class="form-control" aria-required="true" />
                <label asp-for="Input.Estado"></label>
                <span asp-validation-for="Input.Estado" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Ciudad" class="form-control" aria-required="true" />
                <label asp-for="Input.Ciudad"></label>
                <span asp-validation-for="Input.Ciudad" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.CodigoPostal" class="form-control" aria-required="true" />
                <label asp-for="Input.CodigoPostal"></label>
                <span asp-validation-for="Input.CodigoPostal" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Referencias" class="form-control" aria-required="true" />
                <label asp-for="Input.Referencias"></label>
                <span asp-validation-for="Input.Referencias" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
